<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/lib"
    android:layout_height="wrap_content"
    tools:context=".IssueActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:background="#00000800"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtBookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:background="#fff"

            android:layout_gravity="center"
            android:visibility="visible"
            android:inputType="number"
            android:text="Book Name"
            android:textSize="25dp"
            android:textColor="#000"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edtQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#fff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:hint="Book Quantity"
            android:visibility="gone"
            android:drawableLeft="@drawable/ic_qty"
            android:inputType="number"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnUpdateQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="5dp"

            android:text="Add Quantity"
            android:visibility="gone"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnIssue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:visibility="gone"
            android:text="Issue Book"
            android:textColor="#000"
            android:textStyle="bold" />


    </LinearLayout>
    <ProgressBar
        android:id="@+id/prograss"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
</RelativeLayout>